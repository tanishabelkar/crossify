<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Crossify</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/bf0be15c3e.js" crossorigin="anonymous"></script>
<style>
    :root {
        --grey: #D9D9D9;
        --blue: #284B63;
        --teal: #3C6E71;
        --black: #353535;
        --white: #ffffff;
    }

    body {
        margin-bottom: 70px;
    }

    footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 70px;
    }

    i {
        margin: 1em;
    }

    nav {
        width: 100%;
        background-color: var(--teal);
        color: var(--white);
    }

    a {
        text-decoration-line: none;
        color: inherit;
    }

    .welcome-wrapper {
        padding-left: 16px;
        padding-right: 16px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: auto;
    }

    .welcome {
        margin: 2rem;
        font-size: 50px;
        text-align: center;
    }

    .instructions {
        min-width: 300px;
        width: 60%;
        margin: 1rem;
    }

    .instructions-heading {
        font-size: 25px;
    }

    .instructions-list {
        text-indent: 18px;
    }

    .get-started {
        width: fit-content;
        height: auto;
        padding: 10px 16px;
        border-radius: 25px;
        border: var(--blue) 3px solid;
        background-color: transparent;
        color: var(--black);
        transition: all 180ms ease-in-out;
    }
    .get-started:hover {
        background-color: var(--blue);
        color: var(--white);
        font-weight: 500;
        letter-spacing: 1px;
    }
    .disclaimer {
        color: darkgray;
        font-size: smaller;
        width: 100%;
        padding-left: 16px;
        padding-right: 16px;
        text-align: justify;
    }

    .form-body {
        display: flex;
        flex-direction: column;
        /* justify-content: center; */
        align-items: center;
        margin-top: 3em;
    }

    .link-label {
        font-size: 1rem;
    }

    .link-input-group {
        display: flex;
        align-items: center;
        padding-top: 1em;
    }

    .link-input {
        padding: 10px;
        height: 3rem;
        width: 30rem;
        border: var(--grey) 2px solid;
    }

    .link-submit {
        border: none;
        background-color: transparent;
    }

    .playlist-body {
        min-width: 300px;
        width: 30%;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .playlist-body-msg {
        background-color: var(--blue);
        color: var(--white);
        text-align: center;
        font-weight: bold;
    }

    .off {
        visibility: hidden;
    }

    .on {
        visibility: visible;
    }

    .crossify {
        color: var(--white);
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: var(--grey);
        color: var(--teal);
        padding-top: 0.5rem;
    }

    .footer-logos {
        display: flex;
        width: 30%;
        justify-content: space-evenly;
        align-items: flex-start;
    }

    #listen-button {
        border: none;
        text-align: center;
    }

    #loader {
        position: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: auto;
    }
</style>